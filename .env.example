# Airtable Configuration
# Get your token from: https://airtable.com/account/tokens
# Get your base ID from Airtable API documentation
VITE_AIRTABLE_TOKEN=your_airtable_token_here
VITE_AIRTABLE_BASE_ID=your_base_id_here

# Cloudinary Configuration (Server-side only - DO NOT use VITE_ prefix)
# Get credentials from: https://cloudinary.com/console
# Free tier: 25GB storage, 25GB bandwidth/month
CLOUDINARY_CLOUD_NAME=your_cloud_name_here
CLOUDINARY_API_KEY=your_api_key_here
CLOUDINARY_API_SECRET=your_api_secret_here

# Feature Flags
# Enable Cloudinary image optimization (set to 'true' to use Cloudinary URLs)
USE_CLOUDINARY=false

# Static Files Hosting
# When enabled, static files (sitemap.xml, JSON data) are fetched from Cloudinary
# instead of being served locally. This improves performance and scalability.
USE_CLOUDINARY_STATIC=false

# Static files folder in Cloudinary (default: portfolio-static)
# CLOUDINARY_STATIC_FOLDER=portfolio-static

# Google Analytics
# This is configured in App.tsx directly with your Measurement ID
# GA4 Measurement ID: G-EJ62G0X6Q5
